pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
  }
  environment {
    GIT_URL = 'https://source.ohsu.edu/OCTRI-Apps/common-lib.git'
    DEFAULT_BRANCH = 'main'
  }
  parameters {
    string(name: 'VERSION', description: 'The version of the common_lib to release.')
  }
  tools {
    maven '3.8.2'
    jdk 'JDK17'
  }
  stages {
    stage('Check Parameters') {
      steps {
        deleteDir()
        checkParams(params)
      }
    }
    stage('Release') {
      steps {
        checkoutMain(env.GIT_URL)
        octriMavenReleasePrep(env.VERSION, env.DEFAULT_BRANCH)
        octriMavenBuild()
      }
    }
    stage('Next Version') {
      steps {
        nextDevelopmentVersion('', env.DEFAULT_BRANCH)
        octriMavenBuild()
      }
    }
  }
}
